<%= form_with(model: grade) do |form| %>
  <% if grade.errors.any? %>
    <div class="error-message">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>
      <ul>
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :enrollment_id, "Enrollment" %>
    <%= form.collection_select :enrollment_id, Enrollment.all, :id, :to_s, prompt: "Select Enrollment" %>
  </div>

  <div class="form-group">
    <%= form.label :score, "Grade Score" %>
    <%= form.number_field :score, in: 0..100 %>
  </div>
  
  <div class="form-group">
    <%= form.submit class: 'btn' %>
  </div>
<% end %>