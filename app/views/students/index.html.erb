<% content_for :title, "Students" %>
<h2>Students</h2>

<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<table class="students-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.email %></td>
        <td>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn' %>
          <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: 'btn' %>