<%# Start of the form for creating or editing a student %>
<%= form_with(model: student) do |form| %>
  <%# Display error messages if any validation errors occur %>
  <% if student.errors.any? %>
    <div class="error-message">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
        <%# Iterate through each error message and display it %>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Form group for student name %>
  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name %>
  </div>

  <%# Form group for student age %>
  <div class="form-group">
    <%= form.label :age, "Age" %>
    <%= form.number_field :age %>
  </div>

  <%# Form group for student email %>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email %>
  </div>

  <%# Form group for the submit button %>
  <div class="form-group">
    <%= form.submit class: 'btn' %>
  </div>
<%# End of the form %>
<% end %>