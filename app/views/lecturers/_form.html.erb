<%# Start of the form for creating or editing a lecturer %>
<%= form_with(model: lecturer) do |form| %>
  <%# Display error messages if any validation errors occur %>
  <% if lecturer.errors.any? %>
    <div class="error-message">
      <h2><%= pluralize(lecturer.errors.count, "error") %> prohibited this lecturer from being saved:</h2>
      <ul>
        <%# Iterate through each error message and display it %>
        <% lecturer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Form group for lecturer name %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%# Form group for lecturer email %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <%# Form group for the submit button %>
  <div class="form-group">
    <%= form.submit class: 'btn' %>
  </div>
<%# End of the form %>
<% end %>